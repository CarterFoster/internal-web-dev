{
  "name": "Node.js",
  // Using default Node.js template, no need for additional features
  
  // Combined commands to use npm
  "postCreateCommand": "mv .env.example .env && npm install && npm run dev",
  
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "emmet.includeLanguages": {
          "javascript": "javascriptreact"
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "codeium.codeium",
        "bradlc.vscode-tailwindcss",
        "pulkitgangwar.nextjs-snippets"
      ]
    }
  }
}